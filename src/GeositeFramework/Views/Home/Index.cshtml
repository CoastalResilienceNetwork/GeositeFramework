@{
    Layout = null;
}

@using GeositeFramework.Models
@model GeositeFramework.Models.Geosite

@helper OptionalLinkText (Geosite.Link link) {
    if (link.Url != null)
    {
        <a href="@link.Url">@link.Text</a>
    }
    else
    {
        @link.Text
    }
        
}

