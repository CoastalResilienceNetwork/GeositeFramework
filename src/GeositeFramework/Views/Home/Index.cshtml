<head>
    <meta charset="utf-8" />
    <title>@Model.TitleMain.Text | @Model.TitleDetail.Text</title>

    <!-- Load CSS for plugins -->
    @foreach (var url in Model.PluginCssUrls) {
        <link rel="stylesheet" href="@url">
    }
